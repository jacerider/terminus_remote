{
    "name": "jacerider/terminus_remote",
    "type": "project",
    "require": {
        "php": "~7.0.0",
        "pantheon-systems/terminus": "~1.2",
        "slim/slim": "^3.8",
        "monolog/monolog": "^1.22",
        "slim/twig-view": "^2.2",
        "cocur/background-process": "^0.7.0"
    },
    "authors": [
        {
            "name": "Cyle Carlson",
            "email": "jacerider@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "compile": [
          "chmod 777 logs/",
          "chmod u+x commands/test.sh",
          "chmod u+x commands/create.sh",
          "chmod u+x commands/install.sh"
        ]
    }
}
